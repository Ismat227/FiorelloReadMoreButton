@model IEnumerable<Category>
@{
    int count = 1;
    ViewData["Title"] = "Index";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 mb-2">
                <a asp-action="Create" class="btn  btn-success">Create</a>               
            </div>
            <div class="col-md-6">
                <div class="card"style="width:900px">
                    <div class="card-header">
                        <h3 class="card-title">Categories</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="width: 10px">Number</th>
                                    <th>Category Name</th>
                                    <th>Is Deleted</th>                                    
                                    <th>Setting</th>                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@category.Name</td>
                                        <td>
                                            @*@if (category.IsDeleted == false)
                                            {
                                                <p>Active</p>
                                            }
                                            else
                                            {
                                                <p>Deleted</p>

                                            }*@
                                            @(category.IsDeleted? "Deleted":"Active")
                                        </td>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@category.Id" class="btn  btn-info"><i class="fas fa-file-invoice"></i></a>
                                            <a asp-action="Update" asp-route-id="@category.Id" class="btn  btn-warning"><i class="fas fa-edit"></i></a>
                                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn  btn-danger">
                                                <i class="@(category.IsDeleted? "far fa-check-square":"far fa-trash-alt")"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.card -->
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>


